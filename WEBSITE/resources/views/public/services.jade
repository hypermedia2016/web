- var pageTitle="Smart life services"
- var mainMenuSelected='Smart life services'

mixin services()
    div(class="services")
        ul
            li(v-for="service in services")
                a("v-bind:href"="'service.html#'+service.id") {{service.name}} {{service.short_description}}
                    img("v-bind:src"="service.img")
doctype html
html(lang="en")
    include ../includes/head.jade
    body
        include ../includes/header_dynamic.jade
        include ../includes/breadcrumb.jade
        services(inline-template "v-bind:locations.sync"="locations")
            div(class="container")
                //sub menu
                ul(class="nav nav-tabs app-home__principal-links app-devices-nav")#sub
                    li(v-for="type in types" class="app-home__principal-link")
                        a("v-bind:href"="type.url" data-toggle="tab" class="app-home__principal-link--img-link")
                            img("v-bind:src"="type.img" class="app-home__principal-link--img")
                            span(class="app-home__principal-link--text") {{type.name}}
                div(class="error") {{ error }}
                div(class="tab-content")
                    div("v-bind:id"="escapeName(type.name)" class="tab-pane fade" v-for="type in types")
                        +services()
        include ../includes/footer.jade