- var pageTitle="Who we are ! Testimonials"
- var superSectionSelected="Who we are"
- var mainMenuSelected='Testimonials'
include ../includes/static-breadcrumb.jade

mixin popup(id, title, video)
    .modal.fade(tabindex='-1', role='dialog',id=id).app-testimonials__video-popup
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span.material-icons(aria-hidden='true') clear
                .modal-body
                    iframe(width="560" height="315" src=video frameborder="0" allowfullscreen)


doctype html
html(lang="en")
    include ../includes/head.jade
    body#video-fix-backdrop
        include ../includes/header_who_we_are.jade

        who-we-are(inline-template "v-bind:locations.sync"="locations")
            div(class="container")
                +breadcrumb(['Who we are', 'Testimonials'],['who-we-are.html', 'testimonials.html'])
                .row
                    .col-md-12.col-sm-12.col-xs-12.app-who__page-label.text-center
                        h1 Testimonials



                .row
                    .col-md-12.col-sm-12.col-xs-12#fazio.app-testimonials__video
                        .app-testimonials__video-text
                            h3 Fabio Fazio
                            h2 "You can be everywhere with a click. You can explore entire new worlds and live neverending adventures!"
                            ul(data-toggle="modal" data-target="#video1").list-unstyled.list-inline
                                li
                                    i.material-icons play_circle_outline
                                li
                                    span Play the video
                .row
                    .col-md-12.col-xs-12.col-sm-12#pif.app-testimonials__video
                        .app-testimonials__video-text
                            h3 Pif
                            h2 "The web is never the purpose but the medium!"
                            ul(data-toggle="modal" data-target="#video2").list-unstyled.list-inline.list-unstyled.list-inline
                                li
                                    i.material-icons play_circle_outline
                                li
                                    span Play the video



                .row
                    .col-md-12#lee.app-testimonials__video
                        .app-testimonials__video-text
                            h3 Tim Berners Lee
                            h2 "The web is the present and will be also the future!"
                            ul(data-toggle="modal" data-target="#video3").list-unstyled.list-inline.list-unstyled.list-inline
                                li
                                    i.material-icons play_circle_outline
                                li
                                    span Play the video
                +popup('video1','Fabio Fazio','https://www.youtube.com/embed/dlyUVXq7Qc0')
                +popup('video2','Pif','https://www.youtube.com/embed/QkNJTh453cM')
                +popup('video3','Tim Berners Lee','https://www.youtube.com/embed/-rxy9lI8-7Q')




        include ../includes/footer.jade