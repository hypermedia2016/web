-
    headMenu = [{name: 'Who we are', link: 'who-we-are.html'},
    {name: 'The group', link: 'the-group.html'}]
-
    mainMenu = [{name: 'Devices', link: 'devices.html'},
    {name: 'Smart life services', link: 'services.html'},
    {name: 'Assistance', link: 'assistance.html'}]

mixin menu-item(name, link)
    li&attributes(attributes)
        a(href=link) #{name}

//head menu
//-ul#head-menu
    each item, i in headMenu
        if headMenuSelected == item.name
            +menu-item(item.name, item.link)(class='selected')
        else
            +menu-item(item.name, item.link)-//

nav.container.app-nav__top-nav
    .row
        .col-md-12
            ul#head-menui.list-inline.list-unstyled
                each item, i in headMenu
                    if headMenuSelected == item.name
                        +menu-item(item.name, item.link)(class='selected')
                    else
                        +menu-item(item.name, item.link)
//main menu
nav.navbar
    .container
        .navbar-header
            a.navbar-brand(href='/')
                img(src='img/app-logo.jpg',alt='Verizon', class="")

        .collapse.navbar-collapse
            ul.nav.navbar-nav#main-menu
                each item, i in mainMenu
                    if mainMenuSelected == item.name
                        +menu-item(item.name, item.link)(class='selected')
                    else
                        +menu-item(item.name, item.link)
//-ul#main-menui
    each item, i in mainMenu
        if mainMenuSelected == item.name
            +menu-item(item.name, item.link)(class='selected')
        else
            +menu-item(item.name, item.link)

